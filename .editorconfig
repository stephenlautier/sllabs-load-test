# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
insert_final_newline = false
max_line_length = 150
# end_of_line = crlf

[*.{js,ts}]
trim_trailing_whitespace = true
spaces_around_operators = inside
insert_final_newline = false

[package.json]
insert_final_newline = true

[*.{json,yml,yaml,csproj,props,md}]
trim_trailing_whitespace = true
indent_size = 2
indent_style = space

[*.{js,ts}]
trim_trailing_whitespace = true
spaces_around_operators = inside
